<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 上部バー：左にメニュー、中央に日付、右にベル -->
    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="menu"
        android:src="@android:drawable/ic_menu_sort_by_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025/9/5"
        android:textSize="33sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnMenu"
        app:layout_constraintEnd_toStartOf="@id/btnBell"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/btnBell"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="notifications"
        android:src="@android:drawable/ic_dialog_info"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"/>

    <!--予定の枠-->
    <jp.ac.meijou.android.chronos.ui.ScheduleListView
        android:id="@+id/scheduleList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDate"
        android:layout_marginTop="12dp"/>



    <!-- 緑ボタン -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditPlan"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="シミュレーションしてみる"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000000"

        app:backgroundTint="@null"
        android:background="@drawable/bg_button_green"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"

        app:layout_constraintBottom_toTopOf="@id/illustrationWrap"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/scheduleList"
        android:layout_marginTop="16dp"
        app:layout_constraintVertical_bias="1.0"/>

    <!-- イラスト（丸背景＋あなたの画像） -->
    <FrameLayout
        android:id="@+id/illustrationWrap"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_circle_green"/>

        <ImageView
            android:id="@+id/heroImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/my_avatar"
            android:scaleType="centerCrop"
            android:contentDescription="イラスト"/>

        <TextView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_circle_yellow"
            android:text="☺"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="end|top"
            android:translationX="-8dp"
            android:translationY="8dp"/>
    </FrameLayout>

    <!-- 下部タブバー -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:menu="@menu/menu_bottom"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
